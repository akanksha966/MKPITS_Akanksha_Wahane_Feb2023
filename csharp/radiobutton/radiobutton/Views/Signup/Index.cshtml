@{
}
@model radiobutton.Models.sign
@using(Html.BeginForm("Index","Signup",FormMethod.Post))
{
    <span>Enter username:</span>@Html.TextBoxFor(m=>m.username)<br/>
    <span>Enter Pssword:</span>@Html.PasswordFor(m=>m.username)
    <br />
    <span>Enter Email:</span>@Html.TextBoxFor(m=>m.email)

    <br />
    <span>Male:</span>@Html.RadioButtonFor(m=>m.gender,"male")
    
    <span>Female:</span>@Html.RadioButtonFor(m=>m.gender,"Female")<br/>
    
    <span>subject1 marks</span> @Html.CheckBoxFor(m=>m.subject1,true)
    
    <span>subject2 marks</span> @Html.CheckBoxFor(m=>m.subject2,false)<br/>
    

    <input type="submit"value="OK"/><br/>


}
<hr/>
<h3>SignUp details</h3>
username:@ViewBag.username
<br />
password:@ViewBag.password
<br />
email:@ViewBag.email
<br />
Gender:@ViewBag.gender
<br />
subject1:@ViewBag.subject1
<br />
subject2:@ViewBag.subject2
<br />
