@model radiobutton.Models.bank
@using(Html.BeginForm("Index","Bank",FormMethod.Post))
{
    <span>Enter Customer Name:</span>@Html.TextBoxFor(m=>m.customername)<br/>
    <span>Amount:</span>@Html.TextBoxFor(m=>m.amount)<br/>
    <span>Deposit</span>@Html.RadioButtonFor(m=>m.mode,"deposit")
    <span>Withdraw</span>@Html.RadioButtonFor(m=>m.mode,"withdraw")<br/>
    <input type="submit"value="OK"/>


}
<h3>Account Details</h3>
Amount:@ViewBag.result