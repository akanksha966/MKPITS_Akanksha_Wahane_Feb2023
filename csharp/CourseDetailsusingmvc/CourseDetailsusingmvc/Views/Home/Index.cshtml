@{
    ViewData["Title"] = "Home Page";
}
@model CourseDetailsusingmvc.Models.course
<h1>Course Form</h1>
@using(Html.BeginForm("Index","Home",FormMethod.Post))
{
   <span>Enter Name</span> @Html.TextBoxFor(m=>m.username)<br/>
    <span>Male</span> @Html.RadioButtonFor(m=>m.gender,"Male")
    <span>Female</span>@Html.RadioButtonFor(m=>m.gender,"Female")<br/>
    <span>Java</span>@Html.CheckBoxFor(m=>m.batch1,true)
    <span>Dotnet</span>@Html.CheckBoxFor(m=>m.batch2,false)<br/>
    <span>City</span>@Html.DropDownListFor(m=>m.getcity,new SelectList(Enum.GetValues(typeof(city))),"city is")<br/><br/>
    <input type="submit"value="Ok"/><br/> <br/>


}
